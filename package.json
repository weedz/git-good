{
  "name": "git-good",
  "version": "0.1.4",
  "description": "Git good",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "esbuild": "pnpm run esbuild:combined && cp static/* dist/",
    "build": "node scripts/build.mjs && cp static/* dist/",
    "esbuild:combined": "esbuild renderer=src/renderer.tsx main=src/main.ts --bundle --platform=node --target=node16 --external:nodegit --external:electron --external:@electron/remote --outdir=dist",
    "watch": "NODE_ENV=development npm run build",
    "dist": "electron-builder",
    "electron-rebuild": "electron-rebuild",
    "lint": "eslint . && tsc --noEmit"
  },
  "keywords": [],
  "author": {
    "name": "Linus BjÃ¶rklund",
    "email": "weedzcokie@gmail.com"
  },
  "files": [
    "dist"
  ],
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/node": "^16.11.47",
    "@types/nodegit": "^0.27.10",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "asar": "^3.2.0",
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.15.1",
    "eslint": "^8.21.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.30.1",
    "preact": "^10.10.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@weedzcokie/store": "^1.0.4",
    "nodegit": "^0.28.0-alpha.18"
  },
  "resolutions": {
    "nan": "github:jkleinsc/nan#remove_accessor_signature"
  },
  "build": {
    "afterPack": "./scripts/after-pack.js",
    "directories": {
      "output": "out"
    },
    "linux": {
      "category": "Development",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weedz/git-good.git"
  },
  "bugs": {
    "url": "https://github.com/weedz/git-good/issues"
  },
  "homepage": "https://github.com/weedz/git-good#readme",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  }
}
